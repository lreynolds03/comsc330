import math

# testing variables
s = "A"
totalHours = 0
sumPoints = 0
ch = 4
gpa = 1.5


# calculates GPA of given section
def GPA(s, ch):
    if s == 'A':
        # calculate GPA given credit hours
        gpa = ch * 4.0
        return gpa
    elif s == 'A-':
        gpa = ch * 3.7
        return gpa
    elif s == 'B+':
        gpa = ch * 3.3
        return gpa
    elif s == 'B':
        gpa = ch * 3.0
        return gpa
    elif s == 'B-':
        gpa = ch * 2.7
        return gpa
    elif s == 'C+':
        gpa = ch * 2.3
        return gpa
    elif s == 'C':
        gpa = ch * 2.0
        return gpa
    elif s == 'C-':
        gpa = ch * 1.7
        return gpa
    elif s == 'D+':
        gpa = ch * 1.3
        return gpa
    elif s == 'D':
        gpa = ch * 1.0
        return gpa
    elif s == 'D-':
        gpa = ch * 0.7
        return gpa
    elif s == 'F':
        gpa = ch * 0
        return gpa


# calculate average GPA
def calcAverageGPA(hours, sumPoints):
    average = sumPoints / hours
    return average


def zScore(average, gpa, n):
    sum = 0
    # for each gpa in file
    difference = gpa - average
    sqdif = difference * difference
    sum += sqdif
    # end
    sd = math.sqrt(sum / (n - 1))
    # for each gpa in file calculate z score
    z = (gpa - average) / sd

    return sd


# array determined in section organization


array = [["C", 3], ['A', 3], ['F', 4], ['I', 2]]
gpaArray = []
for row in array:
    count = 0
    for val in row:
        count += 1
        if count == 1:
            s = val
        elif count == 2:
            ch = val
            totalHours += ch
    gpa = GPA(s,ch)
    gpaArray.append(gpa)
    sumPoints += gpa

print(gpaArray)
